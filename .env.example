# Egen Meeting Notes - Environment Configuration Template
# Copy this file to .env and fill in your values

# ===========================================
# GCP Configuration
# ===========================================

# Path to service account key file
GOOGLE_APPLICATION_CREDENTIALS=./infrastructure/gcp/service-account-key.json

# GCP Project ID
GCP_PROJECT_ID=karthik-patil-sandbox

# GCP Region for Cloud Functions
GCP_REGION=us-central1

# ===========================================
# OAuth Configuration
# ===========================================

# Web Client OAuth (from GCP Console > APIs > Credentials)
OAUTH_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
OAUTH_WEB_CLIENT_SECRET=your-web-client-secret

# Chrome Extension OAuth Client ID (optional, for extension development)
OAUTH_EXTENSION_CLIENT_ID=your-extension-client-id.apps.googleusercontent.com

# ===========================================
# API Endpoints
# ===========================================

# Classify function URL (after deployment)
# Local development: http://localhost:8080
# Production: https://us-central1-egen-meeting-notes.cloudfunctions.net/classify
CLASSIFY_ENDPOINT=http://localhost:8080

# ===========================================
# Firestore Configuration
# ===========================================

# Firestore database ID (default is "(default)")
FIRESTORE_DATABASE_ID=(default)

# ===========================================
# Drive Configuration
# ===========================================

# Root folder ID (filled after running drive setup)
DRIVE_ROOT_FOLDER_ID=

# Domain to share folders with
DRIVE_SHARE_DOMAIN=egen.com

# ===========================================
# Development Settings
# ===========================================

# Enable debug logging
DEBUG=false

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===========================================
# Testing
# ===========================================

# Skip integration tests that require live services
SKIP_INTEGRATION_TESTS=false
